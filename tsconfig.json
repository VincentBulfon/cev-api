{
  "compilerOptions": {
    "skipLibCheck": true,
    "esModuleInterop": true,
    "target": "es2018",
    "module": "commonjs",
    "strict": true,
    "outDir": "build",
    "rootDir": ".",
    "plugins": [
      {
        "name": "nexus/typescript-language-service"
      }
    ],
    "typeRoots": ["node_modules/@types", "types"]
  },
  "include": ["types.d.ts", "."]
}
